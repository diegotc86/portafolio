<div class="container">
  <h1 class="mb-0">EDIT:
    <span class="text-primary">Experience</span>
  </h1>

  <div class="w-50">
    <form action="/experience" method="POST">

      <% @data.each do |job| %>
    
        <div class="form-group">
          <label for="position">Position</label>
          <input type="text" class="form-control" name="position[]" value='<%= job["position"]%>'>
        </div>
        <div class="form-group">
          <label for="place">Place</label>
          <input type="text" class="form-control" name="place[]" value='<%= job["place"]%>''>
        </div>
        <div class="form-group">
          <label for="time">Time</label>
          <input type="text" class="form-control" name="time[]" value='<%= job["time"]%>''>
        </div>
        <div class="form-group">
          <label for="role">Role</label>
          <textarea class="form-control" name="role[]" rows="2"><%= job["role"]%></textarea>
        </div>
        <hr class="m-0">
      <% end %>
      
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>
</div>